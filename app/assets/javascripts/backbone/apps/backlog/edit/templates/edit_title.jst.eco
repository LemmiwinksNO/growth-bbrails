<div id="page-title">
  <div class="row">
    <div class="large-12 columns">
      <h1><%= @title %></h1>
      <h4>Edit this item</h4>
    </div>
  </div>
</div>
<ul class="breadcrumbs">
  <li><a href="/#backlog">Backlog</a></li>
  <% if @type == 'focus': %>
    <li><a href="/#backlog/<%= @type %>"><%= @type %>es</a></li>
  <% else: %>
    <li><a href="/#backlog/<%= @type %>"><%= @type %>s</a></li>
  <% end %>
  <li class="current"><a href="#"><%= @title %></a></li>
</ul>